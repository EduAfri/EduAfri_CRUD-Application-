@model IEnumerable<Subject>

@{ ViewData["Title"] = "Class Rooms"; }

<div>
    <h3 style="align-content: center; color:cornflowerblue; text-align:center">Welcome, Please Majestically Stroll Into Your Classroom.</h3>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
<div class="col-md-4 col-xs-6 border-primary mb-3">
    <div class="card mb-3" style="max-width: 540px;" >
        <div class="row g-0">
            <div class="col-md-12">
                <div class="card-header text-white bg-info" style="background-color:blueviolet">
                    <p class="card-text">
                        <h3 class="card-title">
                            @item?.Class?.ClassType

                            <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        </h3>
                    </p>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card-body">
                    
                    <p class="card-text"><b>Category: </b>@item.CourseCategory</p>
                    <p class="card-text"><b>Class </b>@item?.Class?.Description</p>
                    <p class="card-text ">
                        <b>Status: </b>
                        @if (DateTime.Now >= item.DateCreated)
                        {
                         <span class="badge bg-success text-white">AVAILABLE</span> }
                        else if (DateTime.Now < item.DateCreated)
                        {
                            <span class="badge bg-danger text-white">NOT AVAILABLE</span> }
                        else
                        {
                            <span class="badge bg-primary text-white">UPCOMING</span>}
                    </p>
                    
                </div>
            </div>
            <div class="col-md-12">
                <div class="card-footer ">
                    <p class="card-text">
                        <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye-fill"></i> Show Details
                        </a>
                        <a class="btn btn-success text-white"
                            asp-controller="Class"
                            asp-action="SelectSubject"
                            asp-route-ClassId="@item.ClassId" name="ClassId" , id="ClassId">

        <i class="bi bi-cart-plus"></i>  Stroll Into @item?.Class?.ClassType
    </a>
                        
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>}
</div>

