@model IEnumerable<Class>

@{
    ViewData["Title"] = "Create class";
}

<div class="row">
    <div class="col-md-8 offset-md-2" style="width:fit-content">

        <p>
            <h1>Create a New Classroom</h1>
        </p>

        <table class="table" style="width:fit-content">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.ClassType)</th>
                   
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ClassType)
                        </td>
                        <td class="align-middle" style="column-width:auto">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>

                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position:fixed; right:25px;" class="text-white">
    <a asp-controller="Class" asp-action="Add" class="btn btn-success">
        <i class="bi bi-pencil-square"></i>Add New
    </a>
</div>
